%range 1 32%
%jar pixi-0.6-new7.jar%
%jobmanager SLURM%

%yaml begin%
simulationType: temporal cgc ngp
gridStep: 1
couplingConstant: 2
numberOfDimensions: 3
numberOfColors: 2
numberOfThreads: 16
gridCells: [320, 256, 256]
timeStep: 0.5
duration: 224.0
evaluationRegion:
  enabled: true
  point1: [2, 0, 0]
  point2: [-3, -1, -1]
activeRegion:
  enabled: true
  point1: [1, 0, 0]
  point2: [-2, -1, -1]

# Au+Au, 0.25% area
# UV at 10GeV
# IR at 2GeV
# mu at 0.505 GeV (MV parameter for SU(3) and Au 197)
# Gamma of 451.5 corresponds to width of 4.0a
currents:
  dualMVModels:
    - direction: 0
      longitudinalLocation: 63
      longitudinalWidth: 4.0
      mu: 0.00513471
      lowPassCoefficient: 0.101224
      infraredCoefficient: 0.0202449

output:
  projectedEnergyDensity:
    - path: 'pr_8_vsmall/pe%i%.dat'
      interval: 1
      direction: 0
%yaml end%

%job begin%
#!/bin/bash


#SBATCH --partition=mem_0256   # select 256GB nodes
#SBATCH --qos=p70623_0256  # select institute queue
#SBATCH --account=p70623  # charge hours to institute queue


#SBATCH -J pr_8_vsmall
#SBATCH --time=24:00:00
#SBATCH --ntasks-per-node=1
#SBATCH --ntasks-per-core=1
#SBATCH --mail-type=END,FAIL
#SBATCH --mail-user=<david.mueller@tuwien.ac.at>
#SBATCH --output=job_output/slurm_%A_%a.out

#SBATCH --array=%i0%-%i1%:1%8

srun java -Xmx230g -Xms230g -cp %jar_path% org.openpixi.pixi.ui.MainBatch %input_path%
%job end%
